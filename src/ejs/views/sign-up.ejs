<%- include('../layout/head.ejs', { title: 'Регистрация' }); %>

<% const fields = [
    {
        id: 'email',
        type: 'email',
        label: 'Почта',
        error: 'Введите почту',
        inputName: 'email',
        required: true
    },
    {
        id: 'login',
        type: 'text',
        label: 'Логин',
        error: 'Введите логин',
        inputName: 'login',
        required: true
    },
    {
        id: 'firstname',
        type: 'text',
        label: 'Имя',
        error: 'Введите имя',
        inputName: 'first_name',
        required: true
    },
    {
        id: 'lastname',
        type: 'text',
        label: 'Фамилия',
        error: 'Введите фамилию',
        inputName: 'second_name',
        required: true
